%div.row
  %div.small-10.small-centered.columns
    %div.entry-container
      %div.clearfix
        %span.entry-title
          = presenter.date

      %div.entry-note-content
      - if presenter.entry.is_closed?
        = presenter.note
      - else
        = form_tag notes_path do
          = label_tag "note"
          = text_area_tag "note"
          = submit_tag "Save", class: "button"


