%div.row
  %div.small-10.small-centered.columns
    %div.entry-container
      %div.clearfix
        %span.entry-title
          = presenter.descriptive_heading
      %ul
        - presenter.extracted_resources.each do |resource|
          %li
            = resource.amount_extracted
            T
            = resource.commodity_name
      %div.entry-summary
        %span.entry-summary-label Total value (by Gal.Avg):
        %span.entry-summary-content= number_with_delimiter(presenter.estimated_value)

- if @entry
  - content_for :entry_actions do
    %div.small-10.small-centered.columns
      %h2 Add Resources
      - Commodity.mineable.each do |resource|
        = link_to resource.name, create_extracted_resource(resource, @entry),
            method: :post, remote: true, class: 'entry-add-item', data: {type: :html}

